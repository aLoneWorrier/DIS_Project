@model Project.Models.CreateMovie

@{ 
    ViewData["Title"] = "Edit"; 
}

<div class="container">
    <div class="card">
        <div class="card-content">
            <div class="row center-align">
                <form method="post" asp-controller="Movie" asp-action="Edit">
                    <div class="input-field col s12">
                        <h4 class="center-align">Know about a new movie but data isn't updated?</h4>
                        <h5 class="center-align">Share the details and help us enrich our movie-database</h5>
                    </div>
                    <div class="input-field col s12">
                        <input placeholder="Movie Name" asp-for="Title" type="text" class="validate">
                        <label asp-for="Title">Movie Name</label>
                        <span asp-validation-for="Title" class="red-text"></span>
                    </div>
                    <div class="input-field col s12">
                        <input placeholder="pcd" asp-for="ImdbId" type="text" class="validate">
                        <label asp-for="ImdbId">Movie IMDB Code</label>
                        <span asp-validation-for="ImdbId" class="red-text"></span>
                    </div>
                    <div class="input-field col s12">
                        <input placeholder="pcd" asp-for="Year" type="text" class="validate">
                        <label asp-for="Year">Released Year</label>
                        <span asp-validation-for="Year" class="red-text"></span>
                    </div>
                    <div class="input-field col s12">
                        <input placeholder="pcd" asp-for="Director" type="text" class="validate">
                        <label asp-for="Director">Director Name</label>
                        <span asp-validation-for="Director" class="red-text"></span>
                    </div>
                    <div class="input-field col s12">
                        <input placeholder="https://www.wikipedia.com" asp-for="URL" type="text" class="validate">
                        <label asp-for="URL">Movie Wikipedia Page URL</label>
                        <span asp-validation-for="URL" class="red-text"></span>
                    </div>
                    <div class="input-field col s12">
                        <input placeholder="https://www.wikipedia.com" asp-for="imageURL" type="text" class="validate">
                        <label asp-for="imageURL">Movie image URL</label>
                        <span asp-validation-for="imageURL" class="red-text"></span>
                    </div>
                    <div class="input-field col s12">
                        <textarea asp-for="Description" class="materialize-textarea"></textarea>
                        <label asp-for="Description">Short plot of the Movie</label>
                        <span asp-validation-for="Description" class="red-text"></span>
                    </div>
                    <div class="input-field col s12">
                        <textarea asp-for="ImdbRating" class="materialize-textarea"></textarea>
                        <label asp-for="ImdbRating">IMDB Ratings of the Movie</label>
                        <span asp-validation-for="ImdbRating" class="red-text"></span>
                    </div>
                    <div class="input-field col s12">
                        <select multiple asp-for="GenreNames">
                            @foreach (var item in ViewBag.genreDict.Keys)
                            {
                <option value="@item">@ViewBag.genreDict[item]</option>
}
                        </select>
                        <label asp-for="GenreNames">Genre</label>
                        <span asp-validation-for="GenreNames" class="red-text"></span>
                    </div>
                    <div class="input-field col s12">
                        <select multiple asp-for="ActorNames">
                            @foreach (var item in ViewBag.actorNames)
                            {
                <option value="@item">@item</option>
}
                        </select>
                        <label asp-for="ActorNames">Actors</label>
                        <span asp-validation-for="ActorNames" class="red-text"></span>
                    </div>
                    <div class="input-field col s12">
                        <button class="btn waves-effect waves-light" type="submit" name="action">Confirm Edit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>