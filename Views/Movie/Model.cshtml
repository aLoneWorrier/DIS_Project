@{ 
    ViewData["Title"] = "Visualize"; 
}

@section chart
{
    <script src="~/js/visualize.js"></script>
}

<div class="container">
    <div class="card">
        <div class="card-content">
            <div class="row center-align">
                <div class="input-field col s12">
                    <h4>Select Genre to Visalize</h4>
                </div>
            </div>
            <div class="row">
                <form>
                    <div class="input-field col m3 center-align">
                        <select ID="genres">
                            <option value="All" selected>All Genres</option>
                            @foreach (var item in ViewBag.adict.Keys)
                            {
                <option value="@item">@ViewBag.adict[item]</option>}
                        </select>
                        <label>Genre</label>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <canvas id="barchart"></canvas>
</div>

